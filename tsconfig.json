{
	"extends": [
		"@tsconfig/strictest",
		"@total-typescript/tsconfig/bundler/no-dom/library-monorepo"
	],
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"declaration": true,
		"isolatedDeclarations": true,
		"noPropertyAccessFromIndexSignature": false,
		"types": ["node", "vitest/importMeta"]
	},
	"exclude": ["**/dist/**", "packages/aoc-cli/bin/aoc.js"]
}
